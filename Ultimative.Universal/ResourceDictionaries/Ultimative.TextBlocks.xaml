<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ultimative.Universal">
    <Style x:Key="SideOptionsTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="Source Sans Pro"/>
        <Setter Property="Margin" Value="15,0,0,0"/>
        <Setter Property="Foreground" Value="{DynamicResource UltimativeRadioButtonUnselectedBrush}"/>
    </Style>

    <Style x:Key="DescriptionTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="等线" />
        <Setter Property="LineHeight" Value="18" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
</ResourceDictionary>